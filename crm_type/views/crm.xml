<odoo>
    <data>
        <record model="ir.ui.view" id="crm_field_type">
            <field name="name">crm.field.type</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_deadline']" position="after">
                    <field name="type_crm" invisible="0"/>
                    <field name="x_studio_tipo" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>